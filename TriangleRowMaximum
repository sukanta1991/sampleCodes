using System;
using System.Collections.Generic;
using System.Linq;
namespace Sukanta
{
    class Program
    {
        static void Main(string[] args)
        {
            int testCase = Convert.ToInt32(Console.ReadLine());
            for (int i = 0; i < testCase; i++)
            {
                int rows = Convert.ToInt32(Console.ReadLine());
                int sums=0;
                for (int j = 0; j < rows; j++)
                {

                    if(j==0)
                    {
                        sums = Convert.ToInt32(Console.ReadLine());
                    }
                    else
                    {
                        int[] vals = Array.ConvertAll(Console.ReadLine().Split(' '), x => Convert.ToInt32(x));
                        int rowTotal = vals.Sum();
                        if (sums < rowTotal)
                            sums = rowTotal;
                    }
                }
                Console.WriteLine(sums); 

            }
        }
    }
}
