 using System;
   namespace Sukanta
    {
        class Program
        {
           public static void Main(string[] args)
            {
                int n = Convert.ToInt32(Console.ReadLine());
                for (int i = 0; i < n; i++)
                {
                int[] arr = Array.ConvertAll(Console.ReadLine().Trim().Split(' '), Convert.ToInt32);
                Console.WriteLine(arr[0] % arr[1]);
                }
            }       
        }
    }
